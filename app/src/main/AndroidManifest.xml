<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chinessy.chinessy">

    <!-- To auto-complete the mEmail text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- for card.io card scanning  paypal -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- for justalk -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name=".Chinessy"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GuideActivity"
            android:label="@string/title_activity_guide"></activity>
        <activity
            android:name=".activity.SignupActivity"
            android:label="@string/title_activity_signup"></activity>
        <activity
            android:name=".activity.PersonInfoActivity"
            android:label="@string/title_activity_person_info"></activity>
        <activity
            android:name=".activity.ModifyActivity"
            android:label="@string/title_activity_modify"></activity>
        <activity
            android:name=".activity.TutorActivity"
            android:label="@string/title_activity_tutor"></activity>
        <activity
            android:name=".activity.TimeslotsActivity"
            android:label="@string/title_activity_timeslots"></activity>
        <activity
            android:name=".activity.AddBalanceActivity"
            android:label="@string/title_activity_add_balance"></activity>
        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />
        <activity
            android:name=".activity.PromotionActivity"
            android:label="@string/title_activity_promotion"></activity>

        <!-- justalk -->
        <activity
            android:name="com.justalk.cloud.juscall.CallActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="55dd1f0ae0f55afc4a00275d" />
        <!-- <meta-data -->
        <!-- android:name="UMENG_CHANNEL" -->
        <!-- android:value="FIR_IM" /> -->
        <!-- <meta-data android:value="GOOGLE_PLAY" android:name="UMENG_CHANNEL"/> -->
        <!-- <meta-data android:value="UMENG" android:name="UMENG_CHANNEL"/> -->
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="TEST" />

        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService"></service>

        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>

        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />
        <activity
            android:name=".activity.RatingsActivity"
            android:label="@string/title_activity_ratings"></activity>
        <activity
            android:name=".activity.SubscriptionsActivity"
            android:label="@string/title_activity_subscriptions"></activity>
        <activity
            android:name=".activity.ChoosePlanActivity"
            android:label="@string/title_activity_choose_plan"></activity>
        <activity
            android:name=".activity.SelectPeriodActivity"
            android:label="@string/title_activity_select_months"></activity>
        <activity
            android:name=".activity.AddExtraMinutesActivity"
            android:label="@string/title_activity_add_minutes"></activity>
        <activity
            android:name=".activity.ChooseAmountActivity"
            android:label="@string/title_activity_choose_amount"></activity>
        <activity
            android:name=".activity.GetPromotionActivity"
            android:label="@string/title_activity_get_promotion"></activity>
        <activity
            android:name=".activity.LiveRoomActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_live_room"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>