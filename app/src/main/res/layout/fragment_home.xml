<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinessy.chinessy.fragment.HomeFragment">

    <ImageView
        android:id="@+id/home_iv_logo"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_iv_logo"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/home_btn_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_long_main"
            android:text="@string/tab_live"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_xl" />


        <Button
            android:id="@+id/home_btn_1on1_Tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_long_main"
            android:text="@string/One_on_One_Tutor"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_xl" />

        <Button
            android:id="@+id/home_btn_getmoreminutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_long_black"
            android:text="@string/Get_More_Minutes"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minutes_remaining"
                android:textSize="@dimen/text_size_s" />
        </LinearLayout>

        <TextView
            android:id="@+id/home_tv_balance_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_s"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
