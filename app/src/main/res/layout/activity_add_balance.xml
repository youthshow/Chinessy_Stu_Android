<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinessy.chinessy.AddBalanceActivity"
    android:orientation="vertical"
    android:background="@color/main_bg_gray"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_green"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Today_s_Remaining"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="43sp"
                    android:textColor="@color/white"
                    android:id="@+id/balance_tv_todaysremain"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/btn_long_white"
                    android:id="@+id/balance_rl_subcription"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Subscription"
                        android:textSize="@dimen/text_size_l"
                        android:layout_centerVertical="true"
                        android:id="@+id/balance_tv_subscription"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/balance_tv_balancepackage"
                            android:textColor="@color/main_green"
                            android:layout_gravity="right"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/balance_tv_expiredat"
                            android:layout_gravity="right"
                            android:textSize="@dimen/text_size_xs"
                            android:textColor="@color/gray"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@drawable/btn_long_white"
                    android:id="@+id/balance_rl_extraminutes"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Extra_Minutes"
                        android:textSize="@dimen/text_size_l"
                        android:layout_centerVertical="true"
                        android:id="@+id/balance_tv_extraminutes"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/balance_tv_balanceextra"
                            android:textColor="@color/main_green"
                            android:layout_gravity="right"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Click_to_add_more"
                            android:layout_gravity="right"
                            android:textColor="@color/gray"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/balance_ll_buypackageproduct"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Add_Subscription"
                    android:textSize="@dimen/text_size_l"
                    android:layout_margin="8dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/btn_long_white"
                        android:id="@+id/balance_rl_chooseplan"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Choose_Plan"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/balance_tv_choosepackageproduct"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/gray"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/btn_long_white"
                        android:id="@+id/balance_rl_months"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Period"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/balance_tv_choosemonths"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/gray"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Total"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/balance_tv_originalprice"
                                android:layout_marginRight="10dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/balance_tv_totalprice"
                                android:textColor="@color/red"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Promo_code"
                        android:layout_marginRight="3dp"
                        android:id="@+id/balance_tv_using"
                        android:visibility="gone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:id="@+id/balance_tv_promotioncode"
                        android:visibility="gone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_green"
                        android:text="@string/Have_a_promo_code"
                        android:id="@+id/balance_tv_addpromocode"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Buy"
                    android:textColor="@color/main_green"
                    android:background="@drawable/btn_long_white"
                    android:layout_marginTop="15dp"
                    android:id="@+id/balance_btn_buy"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_xl"
                    />
            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:id="@+id/balance_pb_loadingpackageproduct"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
