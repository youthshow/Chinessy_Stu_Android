<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinessy.chinessy.fragment.MyFragment"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@mipmap/bg_me"
                android:id="@+id/my_rl_personalinfo">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/me_profilepic"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="25dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/my_tv_name"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_margin="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/my_tv_phone"
                            android:textColor="@color/white"
                            android:layout_margin="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:id="@+id/my_rl_editprofile"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/btn_long_white"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Edit_Profile"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_m"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:id="@+id/my_rl_addbalance"
                        android:background="@drawable/btn_long_white"
                        android:layout_marginBottom="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Add_Balance"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_m"
                            android:id="@+id/my_tv_balance"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:id="@+id/my_rl_promotion"
                        android:background="@drawable/btn_long_white"
                        android:layout_marginBottom="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Promotion_Code"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_m"
                            android:id="@+id/my_tv_promotion"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:id="@+id/my_rl_tellfriends"
                        android:background="@drawable/btn_long_white"
                        android:layout_marginBottom="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Tell_Friends"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_m"
                            android:id="@+id/my_tv_referralcode"
                            />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:id="@+id/my_rl_emailsupport"
                        android:background="@drawable/btn_long_white"
                        android:layout_marginBottom="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/Email_Support"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_m"
                            />
                    </RelativeLayout>

                    <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="48dp"-->
                    <!--android:padding="5dp"-->
                    <!--android:id="@+id/my_rl_newbieguide"-->
                    <!--android:background="@drawable/btn_long_white"-->
                    <!--android:layout_marginBottom="1dp"-->
                    <!-->-->
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="@dimen/text_size_l"-->
                    <!--android:text="@string/newbie_guide"-->
                    <!--/>-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:textColor="@color/gray"-->
                    <!--android:textSize="@dimen/text_size_l"-->
                    <!--/>-->
                    <!--</RelativeLayout>-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:id="@+id/my_rl_about"
                        android:background="@drawable/btn_long_white"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_l"
                            android:text="@string/About"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_m"
                            android:text="v1.62"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Logout"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_long_white"
                    android:textColor="@color/main_color"
                    android:id="@+id/my_btn_logout"
                    android:textAllCaps="false"
                    android:layout_marginBottom="20dp"
                    >
                </Button>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
